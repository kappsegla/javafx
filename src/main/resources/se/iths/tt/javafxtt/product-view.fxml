<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.tt.javafxtt.controller.ProductViewController">
   <center>
      <ListView fx:id="productListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <left>
       <GridPane BorderPane.alignment="CENTER">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
           </rowConstraints>
           <BorderPane.margin>
               <Insets/>
           </BorderPane.margin>
           <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
           </padding>
           <Label text="Product name:"/>
           <Label text="Product ean code:" GridPane.rowIndex="1"/>
           <Label text="Product price:" GridPane.rowIndex="2"/>
           <Label text="Category name:" GridPane.rowIndex="3"/>
           <TextField fx:id="nameTextField" GridPane.columnIndex="1"/>
           <TextField fx:id="eanTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
           <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
           <TextField fx:id="categoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
           <Button onAction="#onAddAction" fx:id="addButton" mnemonicParsing="false" text="Add product" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
           <Button onAction="#onSaveAction" fx:id="saveButton" mnemonicParsing="false" text="Save products" GridPane.rowIndex="4"/>
       </GridPane>
   </left>
</BorderPane>
